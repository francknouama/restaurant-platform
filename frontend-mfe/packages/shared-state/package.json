{
  "name": "@restaurant/shared-state",
  "version": "1.0.0",
  "description": "Shared state management and cross-MFE communication for Restaurant Platform",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
